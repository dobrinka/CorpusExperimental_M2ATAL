#! /bin/bash

### Corpus el
python cleaneval.py -t ./resultats/HTML2text/el/ ./source/el/gold/ > ./resultats/HTML2text/StatisticResults/el/ResultatGlobal.txt

### Corpus en
python cleaneval.py -t ./resultats/HTML2text/en/ ./source/en/gold/ > ./resultats/HTML2text/StatisticResults/en/ResultatGlobal.txt

### Corpus pl
python cleaneval.py -t ./resultats/HTML2text/pl/ ./source/pl/gold/ > ./resultats/HTML2text/StatisticResults/pl/ResultatGlobal.txt

### Corpus ru
python cleaneval.py -t ./resultats/HTML2text/ru/ ./source/ru/gold/ > ./resultats/HTML2text/StatisticResults/ru/ResultatGlobal.txt

FILES=./resultats/HTML2text/en/*
for f in $FILES
do
  #echo "Processing $f file..."
  python test_api.py -t ./resultats/HTML2text/en/$f ./source/en/gold/$f > ./resultats/HTML2text/StatisticResults/el/ResultatLocal.txt
  # take action on each file. $f store current file name
  #cat $f
done
